<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sz91online.bgms.module.baby.dao.BabyTaskStepMapperExt">
	<resultMap
		extends="com.sz91online.bgms.module.baby.dao.BabyTaskStepMapper.BaseResultMap"
		id="simpleBabyTaskStep" type="com.sz91online.bgms.module.baby.domain.SimpleBabyTaskStep" />

	<select id="findStepsByRequireCode" resultMap="simpleBabyTaskStep">
		select step.* from t_baby_task_record step inner join t_baby_tasks task on step.task_code = task.task_code where task.require_code = #{require_code,jdbcType=VARCHAR}
	</select>

</mapper>